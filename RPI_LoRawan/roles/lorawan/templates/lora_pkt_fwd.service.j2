[Unit]
Description=WM1302 Packet Forwarder
Wants=network-online.target
After=network-online.target

[Service]
Type=idle
ExecStart=/home/{{ansible_user}}/sx1302_hal/packet_forwarder/lora_pkt_fwd -c /home/{{ansible_user}}/sx1302_hal/packet_forwarder/global_conf.json.sx1250.AU915.json
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target